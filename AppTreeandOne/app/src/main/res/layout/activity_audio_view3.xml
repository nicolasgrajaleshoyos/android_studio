<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioActivityView3">

    <Button
        android:id="@+id/bt_One"
        android:layout_width="239dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:onClick="MyMediaPlayer"
        android:text="AUDIO CON SOUNPOOL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_Two"
        android:layout_width="211dp"
        android:layout_height="73dp"
        android:layout_marginTop="52dp"
        android:onClick="AudioSoundPool"
        android:text="AUDIO CON MEDIAPLAYER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_One" />

    <Button
        android:id="@+id/bt_Snop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:onClick="StopMediaPlayer"
        android:text="snop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_Two" />

    <Button
        android:id="@+id/bt_next3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:onClick="siguiente3"
        android:text="next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_Snop" />
</androidx.constraintlayout.widget.ConstraintLayout>